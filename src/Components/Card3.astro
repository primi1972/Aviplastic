---
const {
  imagen = "https://www.mecnet.com.mx/images/logo.svg",
  producto = "Producto",
  modelo = "Generica",
  texto = "Hola mundo cruel",
  comprar = "https://www.mecnet.com.mx",
  alt = "imagen MECNET",
} = Astro.props;
---

<div class="cards">
  <div class="imgBx">
    <img src={imagen} alt={alt} />
  </div>
  <div class="content">
    <div class="details">
      <h2>{producto}<br /><span>{modelo}</span></h2>
      <p>{texto}</p>
      <a href={comprar}>Contactanos</a>
    </div>
  </div>
</div>

<style>
  .cards {
    position: relative;
    width: 300px;
    height: 400px;
    background: linear-gradient(#2196f3, #2196f3 30%, #1d3548 30%, #1d3548);
    margin: 10px;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: rgba(0, 0, 0, 0.16) 0px 10px 36px 0px,
      rgba(0, 0, 0, 0.06) 0px 0px 0px 1px;
  }

  .cards .imgBx {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transition: 500ms;
    z-index: 2;
    border-radius: 10px;
    overflow: hidden;
    transform-origin: top;
    /* display: none; */
  }
  .cards:hover .imgBx {
    transform: translateY(5px) scale(0.45);
  }
  .cards .imgBx img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cards .content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    padding-bottom: 30px;
  }

  .cards .content .details {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    text-align: center;
  }

  .cards .content .details h2 {
    color: #fff;
    font-size: 1.2em;
    font-weight: 500;
  }

  .cards .content .details h2 span {
    font-size: 0.8em;
    font-weight: 400;
    color: #2196f3;
  }

  .cards .content .details p {
    font-size: 1em;
    font-weight: 200;
    color: #fff;
    text-transform: uppercase;
    opacity: 0.7;
  }

  .cards .content .details a {
    margin-top: 30px;
    background: whitesmoke;
    color: #1d3548;
    padding: 5px 10px;
    border-radius: 5px;
    width: min-content;
    border: 2px solid;
    font-weight: 600;
    transition: 500ms ease-in-out;
  }

  .cards .content .details a:hover {
    background: #2196f3;
    color: #fff;
  }

  @media only screen and (max-width: 768px) {
    .cards .imgBx {
      transform: translateY(5px) scale(0.45);
    }
  }
</style>
