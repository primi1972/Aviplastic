---
const {
  imagen = "production_quantity_limits",
  titulo = "Hola",
  texto = "texto",
  texto_boton = "SABER MAS...",
  enlace = "#",
} = Astro.props;
---

<div class="card1 mt-6">
  <div class="imagen">
    <span class="material-symbols-outlined">
      {imagen}
    </span>
  </div>
  <div class="contenido">
    <h2 class="titulo">{titulo}</h2>
    <p class="texto">{texto}</p>
  </div>
  <div class="my-6"><a href={enlace} class="boton">{texto_boton}</a></div>
</div>

<style>
  .card1 {
    width: 350px;
    height: 100%;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .card1:hover span{
    color: var(--secundary-color);
  }

  .card1 span {
    font-size: 80px;
    object-fit: cover;
    margin: 0 auto;
    color: var(--primary-color);
    transition: 500ms ease-in-out;
    text-shadow: 1px 1px 2px rgba(81, 67, 21, 0.8),
      4px 4px 10px rgba(81, 67, 21, 0.8);
  }

  .contenido {
    display: flex;
    flex-direction: column;
  }

  .titulo {
    font-size: 30px;
    font-weight: 600;
    margin: 10px 0;
    text-transform: capitalize;
    transition: 500ms ease-in-out;
    text-align: center;
  }

  .texto {
    text-align: center;
  }

</style>
