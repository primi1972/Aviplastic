---
const {
  imagen,
  titulo = "Titulo",
  subtitulo = "Subtitulo",
  texto = "Hola mundo cruel",
  alt = "abiplastic",
} = Astro.props;
---

<div>
  <img src={imagen} class="slider__img" alt={alt}/>
  <div class="slider_texto m-3">
    <h2>{titulo}</h2>

    <p>{texto}</p>
  </div>
</div>

<style>
  .slider__img {
    width: 300px;
    height: 300px;
    object-fit: cover;
    margin: 0 auto;
  }

  h2{
    margin-top: 20px;
  }
  
  p{
    margin: 20px 0;
  }
</style>
