---
const { titulo = "Titulo", imagen, texto = "texto", link = "#" } = Astro.props;
---

<div class="card">
  <div class="card-image">
    <img src={imagen} />
    <span class="card-title">{titulo}</span>
  </div>
  <div class="card-content">
    <p>{texto}</p>
  </div>
  <div class="card-action">
    <a href={link}>This is a link</a>
  </div>
</div>

<style>
  .card {
    width: 300px;
  }
</style>
