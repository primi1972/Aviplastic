---
const {
  video,
  titulo = "Titulo",
  subtitulo = "Subtitulo",
  texto = "Hola mundo cruel",
} = Astro.props;
---

<div class="card">
  <video muted autoplay loop src={video} class="slider__img"></video>
  <div class="slider_texto m-3">
    <h2>{titulo}</h2>
    <p>{texto}</p>
  </div>
</div>

<style>

  .card{
    width: 250px;
  }

  .slider__img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    margin: 0 auto;
  }
  h2{
    margin-top: 20px;
  }
  
  p{
    margin: 20px 0;
  }
</style>
